package avaliacao;

import java.util.Scanner;

public class media {
	
	public void mediaAritmetica(double N1, double N2, double N3){
		double media = (N1+N2+N3)/3;
		System.out.println("Média Aritmética = "+media);
	}

	public double mediaPonderada(double N1, double N2, double N3){
		double media = (double) ((N1*0.2)+(N2*0.3)+(N3*0.5));
		return media;
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		media nota; // declaração do objeto 
		nota = new media(); //estancianco objeto
		
		int op;
		Scanner sc = new Scanner(System.in);
		System.out.println("Digite 1 para obter a media aritmécita ou 2 para media ponderada");
		op = sc.nextInt();
		
		if(op==1) {
			nota.mediaAritmetica(2.0, 5.0, 6.0);			
		}
		else { 
			System.out.println("Média Ponderada = "+ nota.mediaPonderada(2.0, 5.0, 6.0));
				
		}
		
	}

}
